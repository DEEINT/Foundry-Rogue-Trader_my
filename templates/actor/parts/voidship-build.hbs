<div class="resource">
  <div class="grid grid-3col">
    <div class="grid-span-1">
      <label class="resource-label">Space</label>
      <input type="text" name="system.space" value="{{system.core.space}}" data-dtype="Number" />
    </div>
    <div class="grid-span-1">
      <label class="resource-label">Power</label>
      <input type="text" name="system.power" value="{{system.core.power}}" data-dtype="Number" />
    </div>
    <div class="grid-span-1">
      <label class="resource-label">SP</label>
      <input type="text" name="system.ship_points" value="{{system.core.ship_points}}" data-dtype="Number" />
    </div>
  </div>
</div>
<table class='item-table'>
  <caption class="">COMPONENTS</caption>
  <thead><tr>
    <th class=''>Type</th>
    <th class=''>{{localize 'Name'}}</th>
    <th class=''>Space</th>
    <th class=''>Power</th>
    <th class=''>SP</th>
    <th class=''>Active</th>
    <th class='table-item-controls'>
      <a
        class='item-control item-create'
        title='{{localize "DOCUMENT.Create" type='component'}}'
        data-type='item'
      >
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='component'}}
      </a>
    </th></tr>
  </thead>
  {{#each components as |item id|}}
  <tr class='item' data-item-id='{{item._id}}'>
    <td class=''>
      <h4>{{locVal "voidship_component_type_abbr" item.system.type}}</h4>
    </td>
    <td class=''>
      <div class='item-image'>
        <a class='rollable' data-roll-type='item'>
          <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
        </a>
      </div>
      <h4>{{item.name}}</h4>
    </td>
    <td class=''>{{item.system.space}}</td>
    <td class=''>{{item.system.power}}</td>
    <td class=''>{{item.system.ship_points}}</td>
    <td class=''>
      {{#if item.system.equipped}}
      <a class="checkbox" data-target="item" data-item-target="system.equipped"><i class="far fa-check-circle"></i></a>
      {{else}}
      <a class="checkbox" data-target="item" data-item-target="system.equipped"><i class="far fa-circle"></i></a>
      {{/if}}
    </td>
    <td class='table-item-controls'>
      <a
        class='item-control item-edit'
        title='{{localize "DOCUMENT.Update" type='component'}}'
        data-type='component'
      >
        <i class='fas fa-edit'></i>
      </a>
      <a
        class='item-control item-delete'
        title='{{localize "DOCUMENT.Delete" type='component'}}'
        data-type='component'
      >
        <i class='fas fa-trash'></i>
      </a>
    </td>
  </tr>
  {{/each}}
</table>
